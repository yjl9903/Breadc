{
  "compilerOptions": {
    "noEmit": true,
    "target": "es2022",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vitest/importMeta"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowImportingTsExtensions": true
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}