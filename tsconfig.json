{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2018",
    "module": "ESNext",
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowImportingTsExtensions": true,
    "types": [
      "vitest/importMeta"
    ],
    "paths": {
      "breadc": [
        "./packages/breadc/src/index.ts"
      ],
      "@breadc/color": [
        "./packages/color/src/index.ts"
      ],
      "@breadc/complete": [
        "./packages/complete/src/index.ts"
      ],
      "@breadc/core": [
        "./packages/core/src/index.ts"
      ],
      "@breadc/death": [
        "./packages/death/src/index.ts"
      ],
      "@breadc/logger": [
        "./packages/logger/src/index.ts"
      ],
      "@breadc/tui": [
        "./packages/tui/src/index.ts"
      ],
    }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/mod.ts"
  ]
}