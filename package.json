    "size-limit": "^12.0.0",
    "tsdown": "^0.20.3",
    "turbo": "^2.8.10",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18"
