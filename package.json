{
  "name": "@breadc/monorepo",
  "version": "0.9.7",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs",
    "format": "prettier --write '**/*.{ts,tsx,js,mjs}'",
    "release": "bumpp package.json packages/*/package.json apps/*/package.json --commit --push --tag && pnpm -r publish --access public",
    "test:ci": "turbo run test:ci",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "preversion": "turbo run test:ci",
    "postversion": "turbo run build"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^12.0.0",
    "@types/node": "^22.19.8",
    "@vitest/coverage-v8": "^4.0.18",
    "bumpp": "latest",
    "cac": "^6.7.14",
    "commander": "^14.0.3",
    "prettier": "^3.8.1",
    "size-limit": "^12.0.0",
    "tsup": "^8.5.1",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vite": "^7.3.1",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.28.2"
}
